@model TaskManagmentSystem.Models.Task

<table class="table">
    <tr>
        <th>Task Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Status:</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Assigned User:</th>
        <td>@(Model.User != null ? Model.User.Name : "Unassigned")</td>
    </tr>
    <tr>
        <th>Tags:</th>
        <td>
            @if (Model.Tags != null && Model.Tags.Any())
            {
                @string.Join(", ", Model.Tags.Select(t => t.Name))
            }
            else
            {
                <span>No Tags</span>
            }
        </td>
    </tr>
</table>


<div class="d-flex justify-content-between">
    <a asp-asp-controller="Tasks" asp-action="" class="btn btn-danger">Delete</a>
    <a asp-asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>


