@model TaskManagmentSystem.Models.Task

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Create Task</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!--<div asp-validation-summary="All" class="text-danger"></div>-->

                        <!---------------------- NAME ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a name"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!---------------------- STATUS ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-control">
                                @foreach (var status in Enum.GetValues(typeof(TaskManagmentSystem.Models.Status)))
                                {
                                    <option value="@status">
                                        @status
                                    </option>
                                }
                            </select>
                        </div>

                        <!---------------------- DUE DATE ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="TaskDetail.DueDate" class="form-label">Due Date</label>
                            <input asp-for="TaskDetail.DueDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                            <span asp-validation-for="TaskDetail.DueDate" class="text-danger"></span>
                        </div>

                        <!---------------------- USER ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="UserId" class="form-label">User</label>
                            <div class="">
                                <select id="existingUser" class="form-control" asp-items="ViewBag.Users" asp-for="UserId">
                                    <option value="">-- Select user --</option>
                                </select>
                            </div>
                            <div class="d-none">
                                <input id="hiddenSelectedUser" class="form-control" />
                            </div>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        
                        <!---------------------- TAGS ---------------------->
                         <div class="form-group mb-3">
                            <label asp-for="Tags" class="form-label">Tags</label>
                            <!--foreach (var tag in ViewBag.Tags)
                            {
                                <tr>
                                    <td><input type="checkbox" name="tag@tag.Value" /></td>
                                    <td>tag.Text</td>
                                </tr>
                            }--->
                            <table>
                                <thead>
                                    <tr>
                                        <th>Select</th>
                                        <th>Item</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var tag in ViewBag.Tags)
                                    {
                                        <tr>
                                            <td><input type="checkbox" name="tag@tag.Value" /></td>
                                            <td>@tag.Text</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!--<div id="tagsContainer">
                                <input name="Tags[0].Name" class="form-control mb-1" placeholder="Enter first tag" value=""/>
                                <input name="Tags[1].Name" class="form-control mb-1" placeholder="Enter second tag" value=""/>
                                <input name="Tags[2].Name" class="form-control" placeholder="Enter third tag" value=""/>
                            </div>
                            <div id="tagsContainer">
                                for (int i = 0; i < 3; i++)
                                {
                                    <input name="Tags[i].Name" class="form-control mb-1" placeholder="Enter tag (i+1)" />
                                }
                            </div>---------------------->
                        </div>


                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />

