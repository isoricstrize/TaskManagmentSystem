@model TaskManagmentSystem.Models.Task

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Create Task</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!---------------------- NAME ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a name"/>
                        </div>

                        <!---------------------- STATUS ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-control">
                                @foreach (var status in Enum.GetValues(typeof(TaskManagmentSystem.Models.Status)))
                                {
                                    <option value="@status">
                                        @status
                                    </option>
                                }
                            </select>
                        </div>

                        <!---------------------- DUE DATE ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="TaskDetail.DueDate" class="form-label">Due Date</label>
                            <input asp-for="TaskDetail.DueDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")"/>
                        </div>

                        <!---------------------- USER ---------------------->
                        <div class="form-group mb-3">
                            <label asp-for="User.Name" class="form-label">User</label>
                            <div class="">
                                <select id="existingUser" class="form-control" asp-items="ViewBag.Users">
                                    <option value="">-- Select user --</option>
                                </select>
                            </div>
                            <div class="d-none">
                                <input id="hiddenSelectedUser" class="form-control" asp-for="User.Name" />
                            </div>
                        </div>
                        
                        <!---------------------- TAGS ---------------------->
                         <div class="form-group mb-3">
                            <label asp-for="Tags" class="form-label">Tags</label>
                            <div id="tagsContainer">
                                <input name="Tags[0].Name" class="form-control mb-1" placeholder="Enter first tag"/>
                                <input name="Tags[1].Name" class="form-control mb-1" placeholder="Enter second tag"/>
                                <input name="Tags[2].Name" class="form-control" placeholder="Enter third tag"/>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
    document.getElementById("existingUser").addEventListener("change", function() {
        let selectedOption = this.options[this.selectedIndex]; 
        let hiddenUserInput = document.getElementById("hiddenSelectedUser");
        hiddenUserInput.value = (selectedOption.text === "-- Select user --") ? "" : selectedOption.text;
        //hiddenUserInput.value = selectedOption.value ? selectedOption.text : ""; TODO- after cleaning DB and removing select user form DB
    });
</script>

}